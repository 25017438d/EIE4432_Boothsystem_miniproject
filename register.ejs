<%- include('partials/page-start') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title">Your Digital Ticket</h2>
                    <div class="qr-code-container mt-4">
                        <img src="<%= qrCodeUrl %>" alt="Booth QR Code" class="img-fluid">
                    </div>
                    <div class="ticket-details mt-4">
                        <h4>Booth: <%= boothNumber %></h4>
                        <p>Event Date: <%= eventDate %></p>
                        <p>Booth Owner: <%= userName %></p>
                        <p class="text-muted">Please present this QR code at the entrance</p>
                    </div>
                    <button class="btn btn-primary mt-3" onclick="window.print()">Print Ticket</button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/page-end') %>